{
  "name": "temporal-worker",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "DEBUG=* npx ts-node index.ts",
    "build": "tsc",
    "dev": "DEBUG=* nodemon --watch ./ --ext ts --exec npx ts-node index.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@temporalio/worker": "1.11.6",
    "@temporalio/workflow": "1.11.6"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "nodemon": "^3.0.0"
  }
}
